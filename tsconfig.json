{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist",
    "target": "es2017",
    "strict": true,
    "removeComments": false,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
